DirectoryIndex index.html

<IfModule mod_rewrite.c>
RewriteEngine On

# Redirigir /inicio a la página principal
RewriteRule ^inicio/?$ index.html [L]

# Servir archivos desde views/ para URLs limpias
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^.]+)$ views/$1.html [L]

# Redirecciones 301 para SEO
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.html[\s?] [NC]
RewriteRule ^index\.html$ / [R=301,L]

RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+views/([^.\s]+)\.html[\s?] [NC]
RewriteRule ^views/([^.]+)\.html$ /$1 [R=301,L]
</IfModule>

# Configuración de seguridad básica
<Files ~ "^\.">
Order allow,deny
Deny from all
</Files>
