# Configuraci칩n para SH COMPANY SAS - Hostinger Compatible
DirectoryIndex index.html

# Redirecci칩n simple para index.html
RewriteEngine On
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.html[\s?] [NC]
RewriteRule ^index\.html$ / [R=301,L]

# URLs limpias para archivos HTML
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^.]+)$ $1.html [L]

# Configuraciones b치sicas de seguridad
<Files ".htaccess">
Order allow,deny
Deny from all
</Files>

# Cache para archivos est치ticos
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType text/css "access plus 1 month"
ExpiresByType application/javascript "access plus 1 month"
ExpiresByType image/png "access plus 1 month"
ExpiresByType image/jpg "access plus 1 month"
ExpiresByType image/jpeg "access plus 1 month"
</IfModule>
